<?xml version="1.0"?>
<launch>
  <arg name="launch_driver"/>
  <arg name="sensor_model"/>
  <arg name="vehicle_model"/>
  <arg name="pointcloud_container_name"/>

  <let name="vehicle_param_file" value="$(find-pkg-share $(var vehicle_model)_description)/config/vehicle_info.param.yaml"/>
  <let name="vehicle_mirror_param_file" value="$(find-pkg-share $(var vehicle_model)_description)/config/mirror.param.yaml"/>

  <include file="$(find-pkg-share tier4_sensing_launch)/launch/sensing.launch.xml">
    <arg name="launch_driver" value="$(var launch_driver)"/>
    <arg name="sensor_model" value="$(var sensor_model)"/>
    <arg name="vehicle_param_file" value="$(var vehicle_param_file)"/>
    <arg name="vehicle_mirror_param_file" value="$(var vehicle_mirror_param_file)"/>
    <arg name="pointcloud_container_name" value="$(var pointcloud_container_name)"/>
  </include>
</launch>
